{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",                                  
    "module": "nodenext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "nodenext",                     
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": [
    "node_modules",
    "prisma/seed.ts"
  ]
}
